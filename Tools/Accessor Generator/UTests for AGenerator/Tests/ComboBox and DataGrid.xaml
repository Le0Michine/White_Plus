<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Collections="clr-namespace:System.Collections;assembly=mscorlib" x:Class="ComboBox_and_DataGrid.ComboBoxAndDataGrid"
        Title="ComboBox and DataGrid" Height="350" Width="525" x:Name="MyView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="294*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="MyGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="300" Width="203" SelectionChanged="MyGrid_SelectionChanged"/>
        <ComboBox x:Name="MyComboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="45,92,0,0" VerticalAlignment="Top" Width="158" Height="23" Text="something" Initialized="MyComboBox_Initialized">
            <ComboBoxItem>one</ComboBoxItem>
            <ComboBoxItem>two</ComboBoxItem>
            <ComboBoxItem>mouse</ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
